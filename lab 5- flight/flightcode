DROP DATABASE IF EXISTS Flight;
CREATE DATABASE Flight;
USE Flight;


DROP TABLE IF EXISTS Flights,
					 Aircraft,
					 Certified,
					 Employees;
 
 
CREATE TABLE FLights (
    flno INT,
    f_from VARCHAR(40),
    f_to VARCHAR(40),
    distance INT,
    departs TIME,
    arrives TIME,
    price INT,
    PRIMARY KEY (flno)
);

CREATE TABLE Aircraft (
    aid INT,
    flno INT,
    aname VARCHAR(40),
    cruisingrange INT,
    PRIMARY KEY (aid),
    FOREIGN KEY (flno)
        REFERENCES Flights (flno) ON DELETE CASCADE
);

CREATE TABLE Employees (
    eid INT,
    ename VARCHAR(40),
    salary INT,
    PRIMARY KEY (eid)
);

CREATE TABLE Certified (
    eid INT,
    aid INT,
    FOREIGN KEY (eid)
        REFERENCES Employees (eid) ON DELETE CASCADE,
    FOREIGN KEY (aid)
        REFERENCES Aircraft (aid) ON DELETE CASCADE
);


