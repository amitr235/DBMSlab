SELECT * FROM Flights;
    
SELECT * FROM Aircraft;   

SELECT * FROM Employees;
    
SELECT * FROM Certified;
    

SELECT DISTINCT
    aname
FROM
    Aircraft a,
    Certified c,
    Employees e
WHERE
    a.aid = c.aid AND c.eid = e.eid
        AND salary > 80000;     
        

SELECT 
    e.eid, MAX(cruisingrange) AS maximum_cruisingrange
FROM
    Aircraft a,
    Certified c,
    Employees e
WHERE
    a.aid = c.aid AND c.eid = e.eid
GROUP BY c.eid
HAVING COUNT(c.aid) > 3;


SELECT 
    ename
FROM
    Employees
WHERE
    salary < (SELECT 
            MIN(price)
        FROM
            Flights
        WHERE
            f_from = 'Bangalore'
                AND f_to = 'Frankfurt');
                

SELECT 
    aname, AVG(salary) AS average_salary_employees
FROM
    Aircraft a,
    Certified c,
    Employees e
WHERE
    a.aid = c.aid AND c.eid = e.eid
        AND cruisingrange > 1000
GROUP BY a.aid;


SELECT DISTINCT
    ename
FROM
    Aircraft a,
    Certified c,
    Employees e
WHERE
    a.aid = c.aid AND c.eid = e.eid
        AND aname = 'Boeing';
        
        
SELECT 
    aid
FROM
    Aircraft
WHERE
    aid IN (SELECT 
            flno
        FROM
            Flights
        WHERE
            f_from = 'Bangalore'
                AND f_to = 'Delhi');
